<div class="container">
  <div class="row">
    <div class="span12">
  <h1>Torey & Pat's URL Shortener</h1>
  
  <form method="post" action="/urls" class="form-inline">  
    <input type="text" class="input-xlarge" placeholder="Enter a URL" name="long_url">
    <input type="submit" class="btn btn-success">
  </form>

  <table class="table table-bordered table-striped">
    <tr>
      <th>Long Url</th>
      <th>Short Url</th>
      <th>Clicks</th>
    </tr>
  <% Url.all.each do |url| %>
    <tr>
      <td><%= url.long_url %></td>
      <td><a href=<%= "http://127.0.0.1:9393/#{url.short_url}" %> target="_blank"><%= url.short_url %></a></td>
      <td><%= url.click_count %></td>
    </tr>
  <% end %>

  </table>

</div>
</div>
</div>
